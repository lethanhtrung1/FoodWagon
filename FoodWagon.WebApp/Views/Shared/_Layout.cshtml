<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" href="~/images/logo.svg" type="image/x-icon" />
	<title>@ViewData["Title"] - FoodWagon.WebApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/FoodWagon.WebApp.styles.css" asp-append-version="true" />

	@* Bootstrap icon *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	@* Toastr *@
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
	@* Syncfusion *@
	<link href="https://cdn.syncfusion.com/ej2/25.1.35/bootstrap5.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@* CDN script syncfusion *@
	<script src="https://cdn.syncfusion.com/ej2/25.1.35/dist/ej2.min.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light fixed-top box-shadow" data-navbar-on-scroll="data-navbar-on-scroll">
			<div class="container">
				<a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
					<img class="d-inline-block" src="~/images/logo.svg" alt="logo" style="margin-bottom: 10px" />
					<span class="text-1000 fs-3 fw-bold ms-2 text-gradient">foodwaGon</span>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse border-top border-lg-0 mb-2 mt-lg-0" id="navbarSupportedContent" style="padding-top: 8px">
					<form class="d-flex mt-4 mt-lg-0 ms-lg-auto ms-xl-0 flex-row-reverse flex-grow-1">
						<div class="input-group-icon pe-2">
							<i class="bi bi-search input-box-icon text-primary"></i>
							<input class="form-control border-1 input-box bg-100 search-input" type="search" 
								placeholder="Search Food" aria-label="Search" style="width: 300px" />
						</div>
					</form>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="About">About</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Contact">Contact</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Blog">Blog</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Cart" asp-action="Index">
									<i class="bi bi-cart"></i>
								</a>
							</li>
							@if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee)) {
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
								</li>
							}
						</ul>
						<ul class="navbar-nav">
							<partial name="_LoginPartial" />
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div>
		<main role="main">
			<partial name="_Notification" />
			@RenderBody()
		</main>
	</div>

	<footer class="py-0 pt-7 bg-1000">
		<partial name="_FooterPartial" />
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@* toastr *@
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
	<ejs-scripts></ejs-scripts>
</body>
</html>
