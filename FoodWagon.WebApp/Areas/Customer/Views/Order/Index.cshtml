@model IEnumerable<OrderHeader>

<div class="container" style="margin-top: 110px">
	<ol class="breadcrumb float-sm-right">
		<li class="breadcrumb-item">
			<a asp-area="Customer" asp-controller="Home" asp-action="Index" style="text-decoration:none;color:#000">Home</a>
		</li>
		<li class="breadcrumb-item">Orders</li>
	</ol>
	<div class="card shadow border-0 mb-5 mt-3">
		<div class="card-header bg-white ml-0 py-3">
			<div class="row">
				<div class="col-12">
					<h3 style="color: #FB6D48">Orders</h3>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<table id="dataTable" class="table" style="overscroll-behavior-x: auto">
				<thead>
					<tr>
						@* <th>Name</th> *@
						<th>Phone</th>
						<th>Status</th>
						<th>Total Price</th>
						<th>Street Address</th>
						<th>City</th>
						@* <th>Payment Method</th> *@
						<th>Order Date</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model) {
						<tr>
							@* <td>@item.Name</td> *@
							<td>@item.PhoneNumber</td>
							<td>@item.OrderStatus</td>
							<td>@item.OrderTotal</td>
							<td>@item.StreetAddress</td>
							<td>@item.City</td>
							@* <td>@item.PaymentMethod</td> *@
							<td>@item.OrderDate</td>
							<td>
								<div class="w-75 btn-group" role="group">
									<a asp-area="Customer" asp-controller="Order"
									   asp-action="Details" asp-route-orderId="@item.Id"
									   class="btn btn-primary mx-1" style="border-radius: 20px">
										<i class="bi bi-pencil-square"></i>
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
