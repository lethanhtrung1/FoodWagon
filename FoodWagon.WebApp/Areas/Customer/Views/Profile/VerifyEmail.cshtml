@model EmailVM

<h3>Email</h3>

<div class="row">
	<div class="col-md-6">
		<form id="email-form" method="post">
			<div asp-validation-summary="All" class="text-danger" role="alert"></div>
			@if (Model.IsEmailConfirmed) {
				<div class="form-floating mb-3 input-group">
					<input asp-for="Email" class="form-control" disabled />
					<div class="input-group-append">
						<span class="h-100 input-group-text text-success font-weight-bold">✓</span>
					</div>
					<label asp-for="Email" class="form-label"></label>
				</div>
			} else {
				<div class="form-floating mb-3">
					<input asp-for="Email" class="form-control" disabled />
					<label asp-for="Email" class="form-label"></label>
					<button id="email-verification" type="submit" asp-action="SendVerificationEmail" class="btn btn-link text-primary">
						<i class="bi bi-send-fill me-2"></i>
						Send verification email
					</button>
				</div>
			}
			<div class="form-floating mb-3">
				<input asp-for="NewEmail" class="form-control" autocomplete="email" aria-required="true" />
				<label asp-for="NewEmail" class="form-label"></label>
				<span asp-validation-for="NewEmail" class="text-danger"></span>
			</div>
			<button id="change-email-button" type="submit" asp-action="ChangeEmail" class="w-100 btn btn-primary">
				<i class="bi bi-envelope-check-fill me-2"></i>
				Change email
			</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}