@model LoginVM

@{
	ViewData["Title"] = "Log in";
}

<div class="container" style="margin-top: 66px">
	<div class="row flex-row-reverse pt-4 justify-content-between mb-4">
		<div class="col-md-4 card border border-1 rounded-3 p-3 shadow">
			<h2 class="text-primary text-center">@ViewData["Title"]</h2>
			<section class="card-body">
				<form id="account" method="post">
					<h5 class="fw-light text-center">Use a local account to log in.</h5>
					<hr />
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3 mt-4 col-md-12">
						<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
						<label asp-for="Email" class="form-label">Email</label>
						<span asp-validation-for="Email" class="text-danger" style="font-size:14px"></span>
					</div>
					<div class="form-floating mb-3 col-md-12">
						<input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
						<label asp-for="Password" class="form-label">Password</label>
						<span asp-validation-for="Password" class="text-danger" style="font-size:14px"></span>
					</div>
					<div class="checkbox mb-3">
						<label asp-for="RememberMe" class="form-check-label" style="font-size: 13px">
							<input class="form-check-input me-2" asp-for="RememberMe" />
							@Html.DisplayNameFor(m => m.RememberMe)
						</label>
					</div>
					<div>
						<button id="login-submit" type="submit"
								class="w-100 btn btn-lg text-white btn-gradient"
								style="background-color:#FF6868">
							Log in
						</button>
					</div>
					<div>
						<div class="d-flex justify-content-end">
							<p>
								<a id="forgot-password" href="#" class="text-danger" style="font-size:13px">
									Forgot password?
								</a>
							</p>
							@* <p>
								<a id="resend-confirmation" href="#" class="text-danger" style="font-size:13px">
									Resend email
								</a>
							</p> *@
						</div>
						<hr />
					</div>
				</form>

				<div class="text-center mt-3">
					<span style="font-size:13px">You don't have a account?'</span>
					<a asp-area="Account" asp-controller="Auth" asp-action="Register" class="text-primary" style="font-size:13px">
						Sign Up
					</a>
				</div>
			</section>
		</div>
		<div class="col-md-6 col-md-offset-2">
			<br />
			<br />
			<br />
			<img src="~/images/logo.svg" width="150px" />
			<br />
			<br />
			<h1 class="fw-bold text-white">
				Wellcome to
				<br />
				<h1 class="text-white" style="font-size: 60px">FoodWagon</h1>
			</h1>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

