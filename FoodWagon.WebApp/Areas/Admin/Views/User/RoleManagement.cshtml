@model RoleManagementVM

<div>
	<div class="card shadow border-0 mb-5 mt-3">
		<div class="card-header bg-white bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-6">
					<h2 style="color: #83A2FF">Manage User Role</h2>
				</div>
				@* <div class="col-6 text-end mt-2">
					<a asp-action="Index" class="btn btn-sm btn-outline-primary">
						<i class="bi bi-arrow-left me-2"></i>
						Back to list
					</a>
				</div> *@
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post">
				<input asp-for="ApplicationUser.Id" hidden />
				<div class="form-group mb-3">
					<label for="">User Name</label>
					<input type="text" asp-for="ApplicationUser.Name" class="form-control" id="inputEmail4" placeholder="Name">
					<span class="text-danger" asp-validation-for="ApplicationUser.Name"></span>
				</div>
				<div class="form-group mb-4">
					<label for="">Role</label>
					<select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="custom-select">
					</select>
				</div>
				<div class="form-group">
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left me-2"></i>
						Back to list
					</a>
					<button type="submit" class="btn btn-primary ml-2">
						<i class="bi bi-arrow-repeat me-2"></i>
						Update
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}