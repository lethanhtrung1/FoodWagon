@model Category

<div>
	<div class="card shadow border-0 mb-5 mt-3">
		<div class="card-header bg-white bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-6">
					<h2 style="color: #9195F6">New Category</h2>
				</div>
				<div class="col-6 text-end mt-2">
					<a asp-action="Index" class="btn btn-sm btn-outline-primary">
						<i class="bi bi-arrow-left me-2"></i>
						Back to list
					</a>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post">
				<div class="form-group">
					<label for="">Category Name</label>
					<input type="text" asp-for="Name" class="form-control" id="inputEmail4" placeholder="Name">
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>
				<div class="form-group">
					<label for="inputAddress">Display Order</label>
					<input type="text" asp-for="DisplayOrder" class="form-control" placeholder="Display Order">
					<span class="text-danger" asp-validation-for="DisplayOrder"></span>
				</div>
				<div class="form-group">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="gridCheck">
						<label class="form-check-label" for="gridCheck"> Active </label>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Create</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}