@model List<Category>

<div>
	<div class="card shadow border-0 mb-5 mt-3">
		<div class="card-header bg-white bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-6">
					<h2 style="color: #83A2FF">Category List</h2>
				</div>
				<div class="col-6 text-end">
					<a asp-action="Create" class="btn btn-outline-primary">
						<i class="bi bi-plus-square me-2"></i>
						Create New Category
					</a>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<table id="dataTable" class="table">
				<thead>
					<tr>
						<th>Category Name</th>
						<th>Display Order</th>
						<th></th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/category.js"></script>
}