@{
	var status = Context.Request.Query["status"];
	var pending = "";
	var inprocess = "";
	var completed = "";
	var approved = "";
	var all = "";

	switch (status) {
		case "pending":
			pending = "text-primary active";
			break;
		case "inprocess":
			inprocess = "text-primary active";
			break;
		case "completed":
			completed = "text-primary active";
			break;
		case "approved":
			approved = "text-primary active";
			break;
		default:
			all = "text-primary active";
			break;
	}
}

<div>
	<div class="card shadow border-0 mb-5 mt-3">
		<div class="card-header bg-white bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-12">
					<h2 style="color: #FB6D48">Orders</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<div class="row d-flex justify-content-between pb-4 pt-2">
				@* <span></span> *@
				<div class="col-md">
					<ul class="nav nav-pills justify-content-start list-group list-group-horizontal-sm">
						<li class="nav-item list-group-item" style="border-bottom-left-radius:20px; border-top-left-radius:20px; padding: 0">
							<a asp-controller="Order" asp-action="Index" asp-route-status="all"
							   class="nav-link bg-transparent px-3 pl-0 @all">
								All
							</a>
						</li>
						<li class="nav-item list-group-item" style="padding: 0">
							<a asp-controller="Order" asp-action="Index" asp-route-status="inprocess"
							   class="nav-link bg-transparent px-3 pl-0 @inprocess">
								In Process
							</a>
						</li>
						<li class="nav-item list-group-item" style="padding: 0">
							<a asp-controller="Order" asp-action="Index" asp-route-status="pending"
							   class="nav-link bg-transparent px-3 pl-0 @pending">
								Payment Pending
							</a>
						</li>
						<li class="nav-item list-group-item" style="padding: 0">
							<a asp-controller="Order" asp-action="Index" asp-route-status="completed"
							   class="nav-link bg-transparent px-3 pl-0 @completed">
								Completed
							</a>
						</li>
						<li class="nav-item list-group-item" style="border-bottom-right-radius:20px; border-top-right-radius:20px; padding: 0">
							<a asp-controller="Order" asp-action="Index" asp-route-status="approved"
							   class="nav-link bg-transparent px-3 pl-0 @approved">
								Approved
							</a>
						</li>
					</ul>
				</div>
				<div class="col-md-auto ml-auto text-right">
					<div class="d-flex">
						<button class="btn btn-primary mr-2">
							<i class="bi bi-funnel"></i>
						</button>
						<div class="input-group">
							<input class="form-control" id="filterDate" type="date" name="date">
							<div class="input-group-append">
								<div class="input-group-text" id="button-addon-date">
									<i class="bi bi-calendar"></i>
								</div>
							</div>
						</div>
						<a asp-controller="Order" asp-action="Index" asp-route-status="all" class="btn ml-2">
							<i class="bi bi-arrow-repeat"></i>
						</a>
					</div>
				</div>
			</div>
			<table id="dataTable" class="table" style="overscroll-behavior-x: auto">
				<thead>
					<tr>
						<th>Name</th>
						<th>Phone</th>
						<th>Status</th>
						<th>Total Price</th>
						<th>Street Address</th>
						<th>City</th>
						<th>Order Date</th>
						<th></th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/order.js"></script>
}