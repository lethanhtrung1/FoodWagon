<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FoodWagon.WebApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/FoodWagon.WebApp.styles.css" asp-append-version="true" />
	<!-- Fonts CSS -->
	<link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap"
		  rel="stylesheet" />
	@* Bootstrap icon *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	@* Datatables *@
	<link rel="stylesheet" href="//cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />


	<!-- Simple bar CSS -->
	<link rel="stylesheet" href="~/lib/css/simplebar.css" />
	<!-- App CSS -->
	<link rel="stylesheet" href="~/lib/css/app-light.css" id="lightTheme" />

	@* Toastr *@
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="vertical light">
	<div class="wrapper">
		<nav class="topnav navbar navbar-light" style="background-color: #ffffff">
			<button type="button" class="navbar-toggler text-muted mt-2 p-0 mr-3 collapseSidebar">
				<i class="bi bi-list"></i>
			</button>
			@* <form class="form-inline mr-auto searchform text-muted">
				<input class="form-control mr-sm-2 bg-transparent border-1 pl-4 text-muted" type="search" placeholder="Type something..." aria-label="Search" />
			</form> *@
		</nav>
		<aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
			<a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
				<i class="fe fe-x"><span class="sr-only"></span></i>
			</a>
			<nav class="vertnav navbar navbar-light">
				<!-- nav bar -->
				<div class="w-100 mb-3 d-flex">
					<a class="navbar-brand mx-auto flex-fill text-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
						<img class="d-inline-block" src="~/images/logo.svg" alt="logo" />
						@* <span class="text-1000 fs-2 fw-bold ms-2 text-gradient">foodwaGon</span> *@
					</a>
				</div>
				<ul class="navbar-nav flex-fill w-100 mb-2">
					<li class="nav-item w-100">
						<a href="#" class="nav-link">
							<i class="bi bi-house-door-fill"></i>
							<span class="ml-3 item-text">Dashboard</span>
						</a>
					</li>
				</ul>
				<p class="text-muted nav-heading mt-4 mb-1">
					<span>Management</span>
				</p>
				<ul class="navbar-nav flex-fill w-100 mb-2">
					<li class="nav-item w-100">
						<a class="nav-link" href="#">
							<i class="bi bi-box-seam-fill"></i>
							<span class="ml-3 item-text">Product</span>
						</a>
					</li>
					<li class="nav-item w-100">
						<a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
							<i class="bi bi-grid-fill"></i>
							<span class="ml-3 item-text">Category</span>
						</a>
					</li>
					<li class="nav-item w-100">
						<a class="nav-link" href="#">
							<i class="bi bi-bag-fill"></i>
							<span class="ml-3 item-text">Order</span>
						</a>
					</li>
					<li class="nav-item w-100">
						<a class="nav-link" href="#">
							<i class="bi bi-people-fill"></i>
							<span class="ml-3 item-text">User</span>
						</a>
					</li>
				</ul>
			</nav>
		</aside>

		<div class="">
			<main role="main" class="main-content pb-3">
				<partial name="_Notification" />
				@RenderBody()
			</main>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@* Theme TiniDashboard *@
	<script src="~/lib/js/simplebar.min.js"></script>
	<script src="~/lib/js/apps.js"></script>

	@* Datatables *@
	<script src="//cdn.datatables.net/2.0.0/js/dataTables.min.js" asp-append-version="true"></script>

	@* toastr *@
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
	@* Sweetalert2 *@
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
